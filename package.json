{
  "name": "webgets",
  "version": "0.1.3",
  "description": "Automated screenshots for your docs",
  "repository": {
    "type": "git",
    "url": "https://github.com/dpeek/webget.git"
  },
  "bugs": {
    "url": "https://github.com/dpeek/webget/issues"
  },
  "homepage": "https://github.com/dpeek/webget",
  "keywords": [
    "playwright",
    "puppeteer",
    "screenshot",
    "automation",
    "documentation",
    "webget"
  ],
  "type": "module",
  "module": "src/index.js",
  "types": "src/index.d.ts",
  "bin": {
    "webget": "./bin/webget"
  },
  "dependencies": {
    "puppeteer": "^22.6.5"
  },
  "devDependencies": {
    "@cloudflare/puppeteer": "^0.0.6",
    "@cloudflare/workers-types": "^4.20240419.0",
    "@hono/zod-validator": "^0.2.1",
    "@types/bun": "latest",
    "@types/listr": "^0.14.9",
    "@types/yargs": "^17.0.32",
    "any-observable": "^0.5.1",
    "hono": "^4.2.6",
    "listr2": "^8.1.1",
    "nanoid": "^5.0.7",
    "playwright": "^1.42.0",
    "prettier": "^3.2.5",
    "typescript": "^5.2.0",
    "wrangler": "^3.51.2",
    "yargs": "^17.7.2",
    "zen-observable": "^0.10.0",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.4",
    "zod-to-ts": "^1.2.0"
  },
  "files": [
    "package.json",
    "bin/webget",
    "src/index.js",
    "src/index.d.ts",
    "public/"
  ],
  "scripts": {
    "vercel-build": "next build",
    "clean": "bun src/scripts/clean.ts",
    "schema": "bun src/scripts/schema.ts",
    "types": "bun src/scripts/types.ts",
    "dev": "bun --watch src/dev.ts",
    "webget": "bun src/cli.ts",
    "cli": "bun build --compile --external electron --sourcemap ./src/cli.ts --outfile webget && mkdir -p bin && mv src/webget bin/webget",
    "pack": "npm pack --pack-destination ../tester"
  }
}
