{
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "default": "https://webget.com/schema.json"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "default": "https://estii.com"
    },
    "deviceScaleFactor": {
      "type": "number",
      "minimum": 1,
      "default": 2
    },
    "width": {
      "type": "number",
      "minimum": 1,
      "default": 1280
    },
    "height": {
      "type": "number",
      "minimum": 1,
      "default": 720
    },
    "actions": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "click"
              },
              "selector": {
                "type": "string"
              },
              "frame": {
                "type": "string"
              }
            },
            "required": [
              "type",
              "selector"
            ],
            "additionalProperties": false
          }
        ]
      },
      "default": []
    }
  },
  "additionalProperties": false,
  "description": "Screenshot configuration",
  "$schema": "http://json-schema.org/draft-07/schema#"
}