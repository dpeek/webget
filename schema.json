{
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "default": "https://webget.com/schema.json"
    },
    "url": {
      "type": "string",
      "default": "https://estii.com"
    },
    "deviceScaleFactor": {
      "type": "number",
      "minimum": 1,
      "default": 2
    },
    "baseUrl": {
      "type": "string"
    },
    "width": {
      "type": "number",
      "minimum": 1,
      "default": 1280
    },
    "height": {
      "type": "number",
      "minimum": 1,
      "default": 720
    },
    "actions": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "click"
              },
              "selector": {
                "type": "string"
              },
              "frame": {
                "type": "string"
              }
            },
            "required": [
              "type",
              "selector"
            ],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "crop"
              },
              "selector": {
                "type": "string"
              }
            },
            "required": [
              "type",
              "selector"
            ],
            "additionalProperties": false
          }
        ]
      },
      "default": []
    },
    "quality": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "default": 80
    },
    "reducedMotion": {
      "type": "string",
      "enum": [
        "no-preference",
        "reduce"
      ],
      "default": "reduce"
    },
    "colorScheme": {
      "type": "string",
      "enum": [
        "no-preference",
        "light",
        "dark"
      ],
      "default": "no-preference"
    },
    "forcedColors": {
      "type": "string",
      "enum": [
        "none",
        "active"
      ],
      "default": "none"
    }
  },
  "additionalProperties": false,
  "description": "Screenshot configuration",
  "$schema": "http://json-schema.org/draft-07/schema#"
}