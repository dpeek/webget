{
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "default": "https://webget.com/schema.json"
    },
    "url": {
      "type": "string",
      "default": "https://estii.com"
    },
    "deviceScaleFactor": {
      "type": "number",
      "minimum": 1,
      "default": 2
    },
    "baseUrl": {
      "type": "string"
    },
    "width": {
      "type": "number",
      "minimum": 1,
      "default": 1280
    },
    "height": {
      "type": "number",
      "minimum": 1,
      "default": 720
    },
    "actions": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "click"
              },
              "selector": {
                "type": "string"
              },
              "frame": {
                "type": "string"
              }
            },
            "required": [
              "type",
              "selector"
            ],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "hover"
              },
              "selector": {
                "type": "string"
              },
              "frame": {
                "type": "string"
              }
            },
            "required": [
              "type",
              "selector"
            ],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "fill"
              },
              "selector": {
                "type": "string"
              },
              "frame": {
                "type": "string"
              },
              "text": {
                "type": "string"
              }
            },
            "required": [
              "type",
              "selector",
              "text"
            ],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "wait"
              },
              "milliseconds": {
                "type": "number"
              }
            },
            "required": [
              "type",
              "milliseconds"
            ],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "crop"
              },
              "selector": {
                "type": "string"
              },
              "area": {
                "anyOf": [
                  {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string",
                        "const": "rect"
                      },
                      "x": {
                        "anyOf": [
                          {
                            "type": "number"
                          },
                          {
                            "type": "string",
                            "enum": [
                              "left",
                              "center",
                              "right"
                            ]
                          }
                        ],
                        "default": 0
                      },
                      "y": {
                        "anyOf": [
                          {
                            "type": "number"
                          },
                          {
                            "type": "string",
                            "enum": [
                              "top",
                              "center",
                              "bottom"
                            ]
                          }
                        ],
                        "default": 0
                      },
                      "width": {
                        "type": "number"
                      },
                      "height": {
                        "type": "number"
                      }
                    },
                    "required": [
                      "type"
                    ],
                    "additionalProperties": false
                  },
                  {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string",
                        "const": "element"
                      },
                      "selector": {
                        "type": "string"
                      },
                      "padding": {
                        "type": "number",
                        "default": 0
                      }
                    },
                    "required": [
                      "type",
                      "selector"
                    ],
                    "additionalProperties": false
                  }
                ]
              }
            },
            "required": [
              "type"
            ],
            "additionalProperties": false
          }
        ]
      },
      "default": []
    },
    "quality": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "default": 80
    },
    "reducedMotion": {
      "type": "string",
      "enum": [
        "no-preference",
        "reduce"
      ],
      "default": "reduce"
    },
    "colorScheme": {
      "type": "string",
      "enum": [
        "no-preference",
        "light",
        "dark"
      ],
      "default": "no-preference"
    },
    "forcedColors": {
      "type": "string",
      "enum": [
        "none",
        "active"
      ],
      "default": "none"
    },
    "device": {
      "type": "string",
      "enum": [
        "iMac24",
        "iMac27",
        "iPadPro11",
        "iPadPro129",
        "iPhone15Pro",
        "MacBookPro14",
        "MacBookPro16"
      ]
    }
  },
  "additionalProperties": false,
  "description": "Screenshot configuration",
  "$schema": "http://json-schema.org/draft-07/schema#"
}