{
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "const": "https://webget.estii.workers.dev/schema/v1.json"
    },
    "url": {
      "type": "string"
    },
    "deviceScaleFactor": {
      "type": "number",
      "minimum": 1,
      "maximum": 3
    },
    "baseUrl": {
      "type": "string"
    },
    "border": {
      "type": "string"
    },
    "width": {
      "type": "number",
      "minimum": 1
    },
    "height": {
      "type": "number",
      "minimum": 1
    },
    "actions": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "goto"
              },
              "url": {
                "type": "string"
              },
              "waitUntil": {
                "type": "string",
                "enum": [
                  "load",
                  "domcontentloaded",
                  "networkidle0",
                  "networkidle2"
                ]
              }
            },
            "required": ["type", "url"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "click"
              },
              "selector": {
                "type": "string"
              },
              "frameSelector": {
                "type": "string"
              },
              "clickCount": {
                "type": "number",
                "minimum": 1,
                "maximum": 3
              },
              "button": {
                "type": "string",
                "enum": ["left", "right", "middle"]
              },
              "position": {
                "type": "object",
                "properties": {
                  "x": {
                    "type": "number"
                  },
                  "y": {
                    "type": "number"
                  }
                },
                "required": ["x", "y"],
                "additionalProperties": false
              }
            },
            "required": ["type", "selector"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "hover"
              },
              "selector": {
                "type": "string"
              },
              "frame": {
                "type": "string"
              }
            },
            "required": ["type", "selector"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "fill"
              },
              "selector": {
                "type": "string"
              },
              "frame": {
                "type": "string"
              },
              "text": {
                "type": "string"
              }
            },
            "required": ["type", "selector", "text"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "wait"
              },
              "milliseconds": {
                "type": "number"
              }
            },
            "required": ["type", "milliseconds"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "crop"
              },
              "selector": {
                "type": "string"
              },
              "x": {
                "type": "number"
              },
              "y": {
                "type": "number"
              },
              "width": {
                "type": "number"
              },
              "height": {
                "type": "number"
              },
              "padding": {
                "type": "number"
              },
              "fullPage": {
                "type": "boolean"
              }
            },
            "required": ["type"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "scroll"
              },
              "selector": {
                "type": "string"
              },
              "offset": {
                "type": "number"
              }
            },
            "required": ["type", "selector"],
            "additionalProperties": false
          }
        ]
      }
    },
    "quality": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "reducedMotion": {
      "type": "string",
      "enum": ["no-preference", "reduce"]
    },
    "colorScheme": {
      "type": "string",
      "enum": ["no-preference", "light", "dark"]
    },
    "forcedColors": {
      "type": "string",
      "enum": ["none", "active"]
    },
    "storageState": {
      "type": "object",
      "properties": {
        "cookies": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "value": {
                "type": "string"
              },
              "domain": {
                "type": "string"
              },
              "path": {
                "type": "string"
              },
              "expires": {
                "type": "number"
              },
              "httpOnly": {
                "type": "boolean"
              },
              "secure": {
                "type": "boolean"
              },
              "sameSite": {
                "type": "string",
                "enum": ["Strict", "Lax", "None"]
              }
            },
            "required": [
              "name",
              "value",
              "domain",
              "path",
              "expires",
              "httpOnly",
              "secure",
              "sameSite"
            ],
            "additionalProperties": false
          }
        },
        "origins": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "origin": {
                "type": "string"
              },
              "localStorage": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "value": {
                      "type": "string"
                    }
                  },
                  "required": ["name", "value"],
                  "additionalProperties": false
                }
              }
            },
            "required": ["origin", "localStorage"],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "omitBackground": {
      "type": "boolean"
    },
    "type": {
      "type": "string",
      "enum": ["png", "jpeg"]
    },
    "headed": {
      "type": "boolean"
    },
    "diff": {
      "type": "boolean"
    },
    "inputs": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#"
      }
    }
  },
  "required": ["url"],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#"
}
